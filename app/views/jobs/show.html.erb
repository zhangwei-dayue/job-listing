<h1><%= @job.title %></h1>
<div class="pull-right">

  <%= link_to("申请职位", new_job_resume_path(@job), class: "btn btn-md btn-primary")%>
</div>
<p>
  <%= simple_format(@job.description) %>
</p>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>简历</th>
      <th>下载链接</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.content %></td>
        <td><%= link_to "下载简历", resume.attachment_url %></td>
        <td><%= link_to("delete", job_resume_path(resume.job, resume), method: :delete, class: "btn btn-danger", data: {confirm: "你确定要删除简历吗？"})%></td>
      </tr>
    <% end %>
  </tbody>
</table>
